/* Title Styling */
h1 {
  font-family: 'Impact', cursive;
  font-size: 5rem;
  color: white;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.8);
  margin-top: 50px;
  margin-bottom: 30px;
}

/* Background Image and Overlays */
#bg-img {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  object-fit: cover;
  z-index: -2;
  filter: brightness(80%) contrast(1.2);
  background-position: center;
  background-size: cover;
}

/* Homepage Sections - Flexbox */
#homepage-sections {
  display: flex;
  justify-content: space-between;
  gap: 40px;
  padding: 40px;
  flex-wrap: wrap;
}

#sets-section {
  flex: 2;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Responsive grid */
  gap: 20px;
  max-width: 75%;
}

#battle-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 320px;
}

#battle-section .battle-banner {
  margin-bottom: 20px;
  font-size: 2rem;
  color: #fff;
  font-weight: bold;
  text-shadow: 2px 2px 6px #000;
}

/* Set Grid Layout */
#set-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Dynamic grid based on screen size */
  gap: 20px;
  padding: 20px;
  justify-items: center; /* This will center the items within the grid */
}

.set-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  text-align: center;
  justify-content: center;
  width: 100%; /* Ensures that each set block is fully stretched to align with others */
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Optional: For a uniform look */
  padding: 10px; /* Optional: for spacing */
}
.set-cover {
  width: 100%;
  height: 150px;
  object-fit: contain; /* Maintains aspect ratio */
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.6); /* Optional: to enhance visual impact */
}

#set-grid button {
  padding: 12px 25px;
  background-color: #333;
  border: 1px solid #444;
  color: #eee;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1.1rem;
  width: 100%;
  margin-top: 10px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  background: linear-gradient(145deg, #6e6e6e, #3f3f3f);
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5), inset 1px 1px 2px rgba(255, 255, 255, 0.3);
}

#set-grid button:hover {
  background-color: #555;
  background: linear-gradient(145deg, #3f3f3f, #6e6e6e);
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5), inset 1px 1px 2px rgba(255, 255, 255, 0.3);
}

/* Battle Sim Block Styling */
#battle-sim-block {
  margin-top: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 350px; /* Increased width for better alignment */
  margin-left: auto;
  margin-right: auto;
  padding: 20px;
  background-color: rgba(0, 0, 0, 0.2);
  border: 2px solid #333;
  border-radius: 12px;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.4);
}

#battle-sim-block img.set-cover {
  width: 100%;
  height: 150px;
  object-fit: contain;
  border-radius: 10px;
}

#battle-sim-block button {
  margin-top: 12px;
  padding: 10px 20px;
  background-color: #3c3c3c;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 1.1rem;
  cursor: pointer;
}

/* Mobile Responsiveness */
@media (max-width: 600px) {
  #homepage-sections {
    flex-direction: column;
    padding: 20px;
  }

  #sets-section {
    grid-template-columns: 1fr;
    max-width: 100%;
  }

  #battle-section {
    width: 100%;
    margin-top: 20px;
  }
}

