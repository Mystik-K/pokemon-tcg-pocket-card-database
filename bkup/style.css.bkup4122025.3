/* Title Styling */
h1 {
  font-family: 'Impact', cursive;
  font-size: 5rem;
  color: white;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.8);
  margin-top: 50px;
  margin-bottom: 30px;
}

/* Background Image and Overlays */
#bg-img {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  object-fit: cover; /* Ensures background covers full screen */
  z-index: -2;
  filter: brightness(80%) contrast(1.2);
  background-position: center;
  background-size: cover;
}

/* Set Button Container Styling */
.set-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  text-align: center;
  justify-content: center;
  width: 100%;
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  padding: 10px;
  cursor: pointer;
}

/* Set Cover Image Styling (Uniform images) */
.set-cover {
  width: 100%;
  height: 150px;
  object-fit: cover; /* Ensures images fill the container without distortion */
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.6);
}

/* Button Styling */
.btn {
  padding: 12px 25px;
  background-color: #333;
  border: 1px solid #444;
  color: #eee;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1.1rem;
  width: 100%;
  margin-top: 10px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  background: linear-gradient(145deg, #6e6e6e, #3f3f3f);
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5), inset 1px 1px 2px rgba(255, 255, 255, 0.3);
}

.btn:hover {
  background-color: #555;
  background: linear-gradient(145deg, #3f3f3f, #6e6e6e);
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5), inset 1px 1px 2px rgba(255, 255, 255, 0.3);
}

/* Homepage Sections - Flexbox */
#homepage-sections {
  display: flex;
  justify-content: space-between; /* Keep sets and battle sim closer */
  gap: 20px;  /* Reduced gap between sections */
  padding: 0; /* Removed padding to keep sections at the top */
  flex-wrap: wrap;
  align-items: flex-start; /* Ensure everything aligns to the top */
  justify-items: center; /* Center sections horizontally */
}

/* Set Section */
#sets-section {
  flex: 2;
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2 columns for sets */
  gap: 20px;
  max-width: 75%; /* Reduced width for better alignment */
  justify-items: center;
  margin-top: 0; /* Ensure there's no additional space on top */
}

/* Battle Sim Section */
#battle-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 30%;  /* Adjust width to match set sections */
  margin-top: 0; /* Ensure there's no gap from the top */
  margin-left: 20px; /* Add some spacing between the two sections */
}

/* Set Grid Layout */
#set-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* Two columns for sets */
  gap: 20px;
  padding: 20px;
  justify-items: center; /* Ensure each item is centered */
  width: 100%;
}

/* Battle Sim Block Styling */
#battle-sim-block {
  margin-top: 20px; /* Adjusted to fit nicely under the Battle Sim title */
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20px;
  background-color: rgba(0, 0, 0, 0.2);
  border: 2px solid #333;
  border-radius: 12px;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.4);
  margin-top: 10px; /* Ensure there's no unnecessary gap */
}

/* Ensure Battle Sim Title is prominent */
.battle-banner {
  font-size: 2.5rem;  /* Increased title size for better visibility */
  font-weight: bold;
  color: #fff;
  text-shadow: 2px 2px 6px #000;
  margin-bottom: 20px;
}


/* Mobile Responsiveness */
@media (max-width: 600px) {
  #homepage-sections {
    flex-direction: column;
    padding: 10px;
  }

  #sets-section {
    grid-template-columns: 1fr; /* Stack sets in one column on smaller screens */
    max-width: 100%;
  }

  #battle-section {
    width: 100%;
    margin-top: 20px;
  }
}

